<!-- app/views/articles/_form.html.erb -->


<div class="container">

<%= simple_form_for [ @review, @review_tag] do |f| %>
  <!-- [...] -->
  <%= f.input :tag, collection:Tag.all, input_html: { multiple: true, class: "multiple-select"}, include_hidden: false %>
  <%= f.button :submit %>

<% end %>
</div>
<div class="container">
<%= simple_form_for [ @review] do |f| %>
  <!-- [...] -->
  <%= f.input :status, collection: Review::STATUSES %>
  <%= f.association :user, collection: @review.application.users, label_method: :email, value_method: :id  %>
  
   <%= f.button :submit %>  
<% end %>
</div>
<%= link_to 'Back', review_path(@review), class: "btn btn-flat" %>