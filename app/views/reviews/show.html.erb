<div class="mt-5 ml-5">
  <div class="row justify-content-around">
    <div class="col-2 text-center">
      <h3>Rating</h3>
      <div class="rating-stars mb-3">
        <% @review.rating.to_i.times do %>
          <i class="fas fa-star"></i>
        <% end %>
        <% (5-@review.rating.to_i).times do %>
          <i class="far fa-star"></i>
        <% end %>
      </div>
      <h3>Reviewer</h3>
      <p><%= @review.reviewer_name %></p>
      <h3>Status</h3>
      <p><%= @review.status %></p>
      <h3>Location</h3>
      <p><%= @review.location %></p>
      <h3>Language</h3>
      <p><%= @review.language %></p>
      <h3>Category</h3>
      <p><% @review.tags.each do |tag| %>
        | <%= tag.name %> 
        <% end %>
      </p>

      <h3>Platform</h3>
      <p><%= @review.store_name %></p>
      <h3>Date</h3>
      <p><%= @review.reviewed_at %></p>
    </div>
    <div class="col-8">
      <%= link_to @review.application.name, root_path, class:"btn btn-danger" %>
      <div class="card-product">
        <div class="card-product-infos">
            <div class="m-5">
              <h3><%= @review.title.capitalize %></h1>
              <p><%= @review.content %></p>
            </div>
        </div>
      </div>
      
    </div>
    <div class="col-2 text-center">
      <p><%= link_to "Back", application_path(@review.application), class:"btn btn-primary" %></p>
      <p><%= link_to "Change Status", edit_review_path, class:"btn btn-primary" %></p>
      <p><%= link_to "Assign", edit_review_path, class:"btn btn-primary" %></p>
      <p><%= link_to "Change Category", edit_review_path, class:"btn btn-primary" %></p>
    </div>
  </div>
</div>







