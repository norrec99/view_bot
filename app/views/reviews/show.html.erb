<%= link_to "Back to reviews", application_path(@review.application), class:"btn btn-flat-reverse" %>
<div class="mt-5 ml-5">
  <div class="row justify-content-around">
    <div class="col-2 text-center">
      <h3>Rating</h3>
      <div class="rating-stars mb-3">
        <% @review.rating.to_i.times do %>
          <i class="fas fa-star"></i>
        <% end %>
        <% (5-@review.rating.to_i).times do %>
          <i class="far fa-star"></i>
        <% end %>
      </div>
      <h3>Status</h3>
      <p><%= @review.status.capitalize %></p>
      <h3>Language</h3>
      <p><%= @review.language.capitalize %></p>
      <h3>Category</h3>
      <p><% @review.tags.each do |tag| %>
        | <%= tag.name %> 
        <% end %>
      </p>
      <h3>Date</h3>
      <p><%= @review.reviewed_at %></p>
    </div>
    
    <div class="review-border col-8">
      <%= link_to @review.application.name, application_path(@review.application), class:"btn btn-flat" %>     
    <div>
      <div class="column">
      <div class="card-product">
        <div class="card-product-infos">
            <div class="m-5">
              <p><%= @review.content %></p>
            </div>
            <div class="row" id="reviewcard">
            <%= link_to "Change Status", edit_review_path, class:"btn btn-flat" %>
            <%= link_to "Assign", edit_review_path, class:"btn btn-flat" %>
            <%= link_to "Change Category", edit_review_path, class:"btn btn-flat" %>
            </div>
        </div>
        </div>
        </div>

        
      </div>
      
    </div>
    <div class="col-2 text-center">
      
      
      
    </div>
  </div>
</div>







