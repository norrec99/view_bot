<div class="container text-center">
  <h1>Existing applications on viewBot</h1>
  <div class="cards-grid">
      <% @applications.each do |application| %>
        <div class="card-category">
          <%= link_to application.name, application %>
          <div class="text-center mb-5">
            <%#= link_to '+ Join App', application, class: "btn btn-flat" %>
            <%= link_to '+ Join App', user_registration_path({user: {application_id: application.id}}), method: :patch, class: "btn btn-flat" %>
          </div>
        </div>
      <% end %>
  </div>
</div>