<%= link_to 'Back', search_path, class: "btn btn-flat" %>
<div class="text-center">
  <h1>Existing applications on ViewBot</h1>
  <div>
    <div class="card-container">
      <% @applications.each do |application| %>
        <div class="card" style="width: 18rem;">
          <% if application.photo.attached? %>
            <img class="card-img-top" src="<%= cl_image_path application.photo.key, height: 300, width: 400, crop: :fill %>" alt="Card image cap"> 
          <% else %>
            <img class="card-img-top" src="https://images.unsplash.com/reserve/bOvf94dPRxWu0u3QsPjF_tree.jpg?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60" alt="Card image cap">
          <% end %>
          <div class="card-body d-flex justify-content-between align-items-center">
            <h5 class="card-title"><%= application.name %></h5>
            <%= link_to "+", user_registration_path({user: {application_id: application.id}}), method: :patch, class: "btn btn-flat" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>