<div class="">
  <div class="row justify-content-around">
    <div class="col-2">
      <div class="mt-3">
        <%= form_tag application_path(@application), method: :get, class: "form" do %>
          <%= label_tag :Filter_by_rating %>
          <%= select_tag :rating,
            options_for_select(0..5),
            class: "form-control"
          %>
          <%= button_tag(type: "submit", class: "btn btn-primary") do %>
            <i class="fab fa-searchengin"></i> 
          <% end %>
            <%= link_to "See All", application_path(@application) %>
        <% end %>
      </div>
      <div class="mt-3">
        <%= form_tag application_path(@application), method: :get, class: "form" do %>
          <%= label_tag :filter_by_location %>
          <%= select_tag :location,
            options_for_select(@location_options),
            class: "form-control"
          %>
          <%= button_tag(type: "submit", class: "btn btn-primary") do %>
            <i class="fab fa-searchengin"></i> 
          <% end %>
            <%= link_to "See All", application_path(@application) %>
        <% end %>
      </div>
      <div class="mt-3">
        <%= form_tag application_path(@application), method: :get, class: "form" do %>
          <%= label_tag :filter_by_language %>
          <%= select_tag :language,
            options_for_select(@language_options),
            class: "form-control"
          %>
          <%= button_tag(type: "submit", class: "btn btn-primary") do %>
            <i class="fab fa-searchengin"></i> 
          <% end %>
            <%= link_to "See All", application_path(@application) %>
        <% end %>
      </div>
      <div class="mt-3">
        <%= form_tag application_path(@application), method: :get, class: "form" do %>
          <%= label_tag :filter_by_date %>
          <%= select_tag :reviewed_at,
            options_for_select(@reviewed_at_options),
            class: "form-control"
          %>
          <%= button_tag(type: "submit", class: "btn btn-primary") do %>
            <i class="fab fa-searchengin"></i> 
          <% end %>
            <%= link_to "See All", application_path(@application) %>
        <% end %>
      </div>
    </div>
    <div class="col-8">
        <div class="card-product">
          <div class="card-product-infos">
            <div class="">
              <h4>AVG STARS</h4>
              <%= @application.reviews.average(:rating) %>
            </div>
            <div>
              <h4>REVIEWS</h4>
              <%= @application.reviews.length %>
            </div>
          </div>
        </div>   
      <% @reviews.each do |review| %>
      <%= link_to review_path(review) do %>
        <div class="card-product">
          <div class="card-product-infos">
            <div class="d-flex justify-content-between">
              <div class="m-5">
                <p><%= review.rating %></p>
                <h2><%= review.title %></h2>
                <p><%= review.content %></p>
              </div>
              <div>
                <p>Name: <%= review.reviewer_name %></p>
                <p>Store: <%= review.store_name %></p>
                <p>Location: <%= review.location %></p>
                <p>Language: <%= review.language %></p>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>







